<Template>
  <Name>lizenzmanager</Name>
  <Repository>mrder/lizenzmanager:latest</Repository>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/mrder/lizenzmanager</Support>
  <WebUI>http://[IP]:[PORT:5200]</WebUI>
  <Icon>https://raw.githubusercontent.com/mrder/lizenzmanager/main/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <Config Name="USERNAME" Target="env" Default="admin" Mode="string" Description="Benutzername für den Login"/>
  <Config Name="PASSWORD" Target="env" Default="secret1991" Mode="string" Description="Passwort für den Login"/>
  <Config Name="BASE_DOMAIN" Target="env" Default="http://localhost:5200" Mode="string" Description="Basis-URL der App"/>
  <Config Name="UPLOAD_FOLDER" Target="env" Default="/app/uploads" Mode="string" Description="Verzeichnis für Uploads"/>
  <Config Name="PORT" Target="env" Default="5200" Mode="number" Description="Port der App"/>
  <Config Name="SECRET_KEY" Target="env" Default="a1s2d3f4g5h6j7k8l8ö9" Mode="string" Description="Secret Key für Session-Sicherheit"/>
</Template>
